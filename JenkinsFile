pipeline {
    agent any

    environment {
        IMAGE_NAME = 'koushik0802/springboot'
        IMAGE_TAG = "${BUILD_NUMBER}"
        CONTAINER_NAME = "springboot_${BUILD_NUMBER}"
        GIT_USER_NAME = 'Koushik0802' // GitHub username
        GIT_REPO_NAME = 'JavaSpringboot' // GitHub repository name
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Koushik0802/JavaSpringboot.git', branch: 'main'
                echo "------------------------------------------"
                echo "scanning Git repo"
                bat "trivy fs ."
            }
        }

        stage('Build and Test') {
            steps {
                bat 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "------------------------------------------"
                    echo "Building docker image"
                    bat "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                    bat "docker run -d --name ${CONTAINER_NAME} ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }

        stage('Trivy Scan Image') {
            steps {
                echo "Running Trivy scan for ${IMAGE_NAME}:${IMAGE_TAG}"
                bat """
                trivy image --severity CRITICAL,HIGH ${IMAGE_NAME}:${IMAGE_TAG}
                """
            }
        }

        stage('Login and Push to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'Docker-cred', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        echo "------------------------------------------"
                        echo "Pushing image into Docker Hub"
                        bat "docker login -u ${DOCKER_USER} -p ${DOCKER_PASS}"
                        bat "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
                    }
                }
            }
        }

        stage('Updating Manifest') {
            steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
            bat """
            git config user.email "gurralakoushik69@gmail.com"
            git config user.name "Koushik0802"
            powershell -Command "(Get-Content deployment.yml) -replace '(?<=image: .*:)(\\w+)', '$env:BUILD_NUMBER' | Set-Content deployment.yml"
            git add deployment.yml
            git commit -m \"Update deployment image to %BUILD_NUMBER%\"
            git push https://%GIT_USER_NAME%:%GITHUB_TOKEN%@github.com/Koushik0802/JavaSpringboot.git HEAD:main
            """
                }
            }
        }
    }

    post {
        success {
            echo "Build and Deployment completed successfully!"
        }
        failure {
            echo "Something went wrong in the pipeline."
        }
    }
}
